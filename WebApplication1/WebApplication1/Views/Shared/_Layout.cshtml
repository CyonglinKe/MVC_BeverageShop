<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 喝了變可愛飲料店</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />  
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />  <!--CSS樣式-->
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" /> <!--CSS樣式-->
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" /> <!--CSS樣式-->
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid px-4">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.png" alt="喝了變可愛飲料店" class="logo-img" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> 首頁
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Menu" asp-action="Index">
                                <i class="fas fa-mug-hot"></i> 菜單
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-info-circle"></i> 關於我們
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link cart-link" asp-area="" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i> 購物車
                                <span class="cart-count" style="display: none;">0</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-3 col-sm-6 mb-4">
                    <h5 class="footer-title">關於我們</h5>
                    <img src="~/img/logo.png" alt="喝了變可愛飲料店" class="footer-logo mb-3" />
                    <p class="footer-text">提供最新鮮、最健康的飲品，讓每一天都充滿活力與快樂！</p>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <h5 class="footer-title">快速連結</h5>
                    <ul class="footer-links">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">首頁</a></li>
                        <li><a asp-area="" asp-controller="Menu" asp-action="Index">最新菜單</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy">關於我們</a></li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <h5 class="footer-title">營業資訊</h5>
                    <ul class="footer-links">
                        <li>營業時間：10:00 - 22:00</li>
                        <li>全年無休</li>
                        <li>歡迎來店選購</li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-12 mb-4">
                    <h5 class="footer-title">追蹤我們</h5>
                    <div class="social-links mb-3">
                        <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-line"></i></a>
                    </div>
                    <p class="footer-text">
                        <i class="fas fa-phone"></i> 0800-123-456<br />
                        <i class="fas fa-envelope"></i> info@drinkshop.com
                    </p>
                </div>
            </div>
            <hr class="footer-divider" />
            <div class="text-center">
                <p class="mb-0 text-muted">&copy; 2025 喝了變可愛飲料店. All Rights Reserved.</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // 載入購物車數量
        $(document).ready(function() {
            updateCartCount();
        });

        function updateCartCount() {
            $.ajax({
                url: '@Url.Action("GetCartCount", "Cart")',
                type: 'GET',
                success: function(result) {
                    if (result.count > 0) {
                        $('.cart-count').text(result.count).show();
                    } else {
                        $('.cart-count').hide();
                    }
                }
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
